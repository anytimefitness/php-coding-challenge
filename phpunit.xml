<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/8.0/phpunit.xsd"
        colors="true"
        bootstrap="vendor/autoload.php">
    <testsuites>
        <testsuite name="Library Challenge">
            <directory phpVersion="7.1.0" phpVersionOperator=">=">./challenges/Library/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>challenges</directory>
        </whitelist>
    </filter>
</phpunit>